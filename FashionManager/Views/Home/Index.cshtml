@section Scripts{
    <script>
        function AddToCart(ProductID) {
            $.ajax({
                type: 'POST',
                url: '/ShoppingCart/AddToCart',
                data: { iProductID: ProductID },
                success: function (data) {
                    console.log(data);
                    //$("#cart-total").html(data.itemAmount + " &nbsp; Sản Phẩm &nbsp; - &nbsp;" + data.total);
                    var html = "";
                    $.each(data.value,function(i, item){
                        html += '<tr>';
                        html += '<td class="image">'+ item.ImageLink + '</td>';
                       
                        html += '<td>';
                        html += '<a href=""></a> <span id="mini-cart-name">'+ item.Name +'</span>';
                        html += '<div>';
                        html += '- <small></small><br />';
                        html += '<td class="quantity">x&nbsp;<span id="mini-cart-quantity">'+item.Quantity +'</span></td>';
                        html += '<td class="total"><span id="mini-cart-amount"></span></td>';                         
                        html += '</div>';
                        html += '</td>';
                        html += '</tr>'; 
                        i++;
                        
                    });
                    $(".mini-cart-info").append(html)
                        
                    }
            });
        }
    </script>
