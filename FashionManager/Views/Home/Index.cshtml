@model IEnumerable<FashionManager.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="pav-showcase" id="pavo-showcase">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class=" box productcarousel orange nopadding">
                    <div class="box-heading">
                        <span class="title">Most Viewed</span>
                    </div>
                    <div class="box-content">
                        <div class="box-products slide" id="productcarousel3">
                            <div class="carousel-controls">
                                <a class="carousel-control left" href="#productcarousel3" data-slide="prev">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                                <a class="carousel-control right" href="#productcarousel3" data-slide="next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <div class="row product-items last">
                                        <div class="col-sm-6 col-xs-12 product-cols pavcol-lg-5 first">
                                            <div class="product-block">
                                                <div class="image">
                                                    <a class="img" href="" src="http://mazzola.vn/image/cache/data/sơ mi đẹp/113-215x238.jpg" title="Áo sơ mi A99" alt="Áo sơ mi A99"></a>
                                                    <!-- zoom image-->
                                                    <a href="http://mazzola.vn/image/data/sơ mi đẹp/113.jpg" class="info-view colorbox product-zoom cboxElement" title="Áo sơ mi A99"><i class="fa fa-search-plus"></i></a>

                                                    <!-- Show Swap -->
                                                    <!-- Show Swap -->

                                                    <a class="pav-colorbox btn btn-theme-default cboxElement" href="http://mazzola.vn/index.php?route=themecontrol/product&amp;product_id=687"><em class="fa fa-eye"></em><span>Quick View</span></a>
                                                </div>
                                                <div class="product-meta">
                                                    <div class="left">
                                                        <h3 class="name"><a href="">Áo sơ mi A99</a></h3>
                                                        <div class="price">
                                                            <span class="special-price">190.000 vnđ</span>
                                                        </div>
                                                    </div>
                                                    <div class="right">
                                                        <div class="norating"><img alt="0" src="~/Content/site/image/stars-0.png"></div>
                                                        <p class="description">...</p>
                                                        <div class="action">
                                                            <div class="cart">
                                                                <button onclick="addToCart('687');" class="btn btn-shopping-cart">
                                                                    <i class="fa fa-shopping-cart"></i><span>Thêm vào giỏ</span>
                                                                </button>
                                                            </div>
                                                            <div class="button-group">
                                                                <div class="wishlist">
                                                                    <a onclick="addToWishList('687');" title="Thêm Yêu thích" class="fa fa-heart product-icon">
                                                                        <span>Thêm Yêu thích</span>
                                                                    </a>
                                                                </div>
                                                                <div class="compare">
                                                                    <a onclick="addToCompare('687');" title="Thêm so sánh" class="fa fa-refresh product-icon">
                                                                        <span>Thêm so sánh</span>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @foreach (var item in Model)
                                        {
                                            <div class="col-sm-6 col-xs-12 product-cols pavcol-lg-5">
                                                <div class="product-block">
                                                    <div class="image">
                                                        <a class="img" href="#"><img class="img-responsive" src="@Url.Content("~/Content/site/image/" +@item.ImageLink )" title="@item.Name" alt="@item.Name"></a>
                                                        <!-- zoom image-->
                                                        <a href="" class="info-view colorbox product-zoom cboxElement" title="Áo Sơ mi A81"><i class="fa fa-search-plus"></i></a>

                                                        <!-- Show Swap -->
                                                        <!-- Show Swap -->

                                                        <a class="pav-colorbox btn btn-theme-default cboxElement" href=""><em class="fa fa-eye"></em><span>Quick View</span></a>
                                                    </div>
                                                    <div class="product-meta">
                                                        <div class="left">
                                                            <h3 class="name"><a href="#">@item.Name</a></h3>
                                                            <div class="price">
                                                                <span class="special-price">@String.Format("{0:0,0}", @item.Price1) VNĐ</span>
                                                            </div>
                                                        </div>
                                                        <div class="right">
                                                            <div class="norating"><img alt="0" src="~/Content/site/image/stars-0.png"></div>
                                                            <p class="description">...</p>
                                                            <div class="action">
                                                                <div class="cart">
                                                                    <button onclick="AddToCart(@item.ProductID);" class="btn btn-shopping-cart">
                                                                        <i class="fa fa-shopping-cart"></i><span>Thêm vào giỏ</span>
                                                                    </button>
                                                                </div>
                                                                <div class="button-group">
                                                                    <div class="wishlist">
                                                                        <a onclick="addToWishList('212');" title="Thêm Yêu thích" class="fa fa-heart product-icon">
                                                                            <span>Thêm Yêu thích</span>
                                                                        </a>
                                                                    </div>
                                                                    <div class="compare">
                                                                        <a onclick="addToCompare('212');" title="Thêm so sánh" class="fa fa-refresh product-icon">
                                                                            <span>Thêm so sánh</span>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $(function () {
                $('.pavproducts1264025901').carousel({ interval: 99999999999999, auto: false, pause: 'hover' });
                $('#producttabs1264025901 a:first').tab('show');
            });
        </script>
    </div>
</section>
@section Scripts{
    <script>
        function AddToCart(ProductID) {
            $.ajax({
                type: 'POST',
                url: '/ShoppingCart/AddToCart',
                data: { iProductID: ProductID },
                success: function (data) {
                    console.log(data);
                    //$("#cart-total").html(data.itemAmount + " &nbsp; Sản Phẩm &nbsp; - &nbsp;" + data.total);
                    var html = "";
                   // $.each(data.value, 
                    function(i, item){
                        html += '<tr>';
                        html += '<td class="image">'+ item.ImageLink + '</td>';
                       
                        html += '<td>';
                        html += '<a href=""></a> <span id="mini-cart-name">'+ item.Name +'</span>';
                        html += '<div>';
                        html += '- <small></small><br />';
                        html += '<td class="quantity">x&nbsp;<span id="mini-cart-quantity">'+item.Quantity +'</span></td>';
                        html += '<td class="total"><span id="mini-cart-amount"></span></td>';                         
                        html += '</div>';
                        html += '</td>';
                        html += '</tr>'; 
                        
                    };//)
                    
                        
                    }
            });
        }
    </script>
}
